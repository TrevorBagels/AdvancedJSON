{
    "@t": "number",
    "//testing property inheritance, string rules, opposite vars, and argparse": "",
    "//note to self: Reserved properties: _defaults, _variables": "",
    "someProperty": {
        "t": "string",
        "transform": "upper",
        "varSet": "rootVarHere"
    },
    "someObject": {
        "t": "object",
        "rules": {
            "aValue": {
                "r": false,
                "t": "number"
            },
            "//this will become a number since the @t is BELOW this property statement.": "",
            "@t": "bool",
            "aBool": {
                "r": false,
                "varSet": ".rootVarSetFromSomeObject",
                "t": "bool"
            },
            "//this should become a bool": ""
        }
    },
    "youBetterAddThis": {
        "r": true,
        "t": "number"
    },
    "anotherNumber": {
        "r": false,
        "t": "number"
    },
    "//should be a number again": "",
    "someObject2": {
        "t": "object",
        "rules": {
            "thing": {
                "t": "number"
            },
            "@t": "array",
            "thing2": {
                "t": "array"
            },
            "thing3": {
                "t": "string",
                "d": "thing no. 3",
                "varSet": "aLocalVariable"
            },
            "nestedObject": {
                "t": "object",
                "rules": {
                    "prop1": {
                        "t": "array"
                    },
                    "anotherObject": {
                        "t": "object",
                        "rules": {
                            "prop1": {
                                "t": "string"
                            }
                        }
                    },
                    "@...t": "string",
                    "aReferenceToRoot": {
                        "t": "string",
                        "d": "$$rootVarSetFromSomeObject"
                    }
                }
            }
        }
    }
}